// src/pages/QuoteForm.jsx
import React from 'react'

export default function QuoteForm() {
  return (
    <div className="page" style={{ backgroundImage: 'url(https://source.unsplash.com/1600x900/?solar,roof)' }}>
      <h1>Request a Quote</h1>
      <form style={{ backgroundColor: "rgba(0,0,0,0.5)", padding: "1rem", borderRadius: "8px", maxWidth: "400px" }}>
        <label>Name:<br/><input type="text" name="name" required /></label><br/><br/>
        <label>Email:<br/><input type="email" name="email" required /></label><br/><br/>
        <label>Phone:<br/><input type="tel" name="phone" required /></label><br/><br/>
        <label>Message:<br/><textarea name="message" rows="4" required /></label><br/><br/>
        <button type="submit">Submit</button>
      </form>
    </div>
  )
}

