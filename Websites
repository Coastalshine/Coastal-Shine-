// src/pages/Home.jsx
import React from 'react'

export default function Home() {
  return (
    <div className="page" style={{ backgroundImage: 'url(https://source.unsplash.com/1600x900/?coast,clean)' }}>
      <h1>Welcome to Coastal Shine</h1>
      <p>We provide expert cleaning for solar panels, windows, and signage. Keep your investments shining and efficient.</p>
    </div>
  )
}

